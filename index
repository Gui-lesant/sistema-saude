    <div class="container">
        <div class="header">
            <h1><i class="fas fa-hospital"></i> Sistema Unidades de Sa√∫de</h1>
            <p>Tabela Din√¢mica com Contatos - Vers√£o Independente</p>
        </div>
        
        <div class="controls">
            <div class="search-box">
                <input type="text" id="searchInput" placeholder="üîç Pesquisar unidades, gerentes, enfermeiros, telefones, endere√ßos...">
            </div>
            <div style="text-align: center;">
                <button onclick="carregarDados()" class="btn btn-primary">
                    <i class="fas fa-sync"></i> Carregar Dados da Planilha
                </button>
            </div>
        </div>
        
        <div id="stats" class="stats" style="display: none;">
            <div class="stat-card">
                <div class="stat-number" id="totalUnidades">0</div>
                <div>Unidades</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="unidadesComTelefone">0</div>
                <div>Com Telefone</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="totalContatos">0</div>
                <div>Contatos</div>
            </div>
        </div>
        
        <div id="loading" class="loading">
            <h3>üëÜ Clique em "Carregar Dados da Planilha" para iniciar</h3>
            <p>O sistema ir√° buscar os dados diretamente da sua planilha do Google Sheets</p>
        </div>
        
        <div id="error" class="error" style="display: none;"></div>
        
        <div id="tabelaContainer" style="display: none;">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th onclick="ordenarTabela(0)">Unidade <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(1)">Gerente <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(2)">Enfermeiro <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(3)">T√©c. Enfermagem <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(4)">M√©dico <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(5)">Telefone <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(6)">Endere√ßo <i class="fas fa-sort"></i></th>
                            <th onclick="ordenarTabela(7)">Sala Vacina <i class="fas fa-sort"></i></th>
                            <th>A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaBody"></tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // CONFIGURA√á√ÉO - ID da sua planilha
        const PLANILHA_ID = '1QTPypA8lmlqeSveShPBI4HY9up6cOUcfulGDAyrP_BQ';
        let dadosOriginais = [];
        let dadosFiltrados = [];
        
        async function carregarDados() {
            try {
                mostrarLoading(true);
                document.getElementById('error').style.display = 'none';
                
                console.log('üîÑ Iniciando carregamento...');
                
                // URL para buscar dados da planilha como CSV
                const url = `https://docs.google.com/spreadsheets/d/${PLANILHA_ID}/gviz/tq?tqx=out:csv`;
                
                const response = await fetch(url);
                
                if (!response.ok) {
                    throw new Error(`Erro HTTP: ${response.status}`);
                }
                
                const csvData = await response.text();
                console.log('üìä Dados CSV recebidos:', csvData.length, 'caracteres');
                
                const dados = parseCSV(csvData);
                console.log('‚úÖ Dados processados:', dados.length, 'registros');
                
                dadosOriginais = dados;
                dadosFiltrados = [...dados];
                
                atualizarEstatisticas(dados);
                renderizarTabela(dados);
                mostrarLoading(false);
                
            } catch (error) {
                console.error('‚ùå Erro detalhado:', error);
                mostrarErro('Erro ao carregar dados: ' + error.message);
                mostrarLoading(false);
            }
        }
        
        function parseCSV(csv) {
            const linhas = csv.split('\n').filter(linha => linha.trim());
            
            if (linhas.length === 0) return [];
            
            // Detecta cabe√ßalhos
            const cabecalhos = linhas[0].split(',').map(h => 
                h.replace(/^"|"$/g, '').trim().toUpperCase()
            );
            
            console.log('üìã Cabe√ßalhos detectados:', cabecalhos);
            
            const dados = [];
            
            for (let i = 1; i < linhas.length; i++) {
                const linha = linhas[i];
                if (!linha.trim()) continue;
                
                // Processa CSV considerando aspas
                const valores = [];
                let dentroDeAspas = false;
                let valorAtual = '';
                
                for (let char of linha) {
                    if (char === '"') {
                        dentroDeAspas = !dentroDeAspas;
                    } else if (char === ',' && !dentroDeAspas) {
                        valores.push(valorAtual.trim());
                        valorAtual = '';
                    } else {
                        valorAtual += char;
                    }
                }
                valores.push(valorAtual.trim());
                
                const registro = {};
                cabecalhos.forEach((cabecalho, index) => {
                    registro[cabecalho] = (valores[index] || '').replace(/^"|"$/g, '');
                });
                
                // S√≥ adiciona se tiver pelo menos um dado
                if (Object.values(registro).some(valor => valor && valor !== '""')) {
                    dados.push(registro);
                }
            }
            
            return dados;
        }
        
        function renderizarTabela(dados) {
            const tbody = document.getElementById('tabelaBody');
            
            if (dados.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="9" style="text-align: center; padding: 3rem; color: #666;">
                            <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                            <div>Nenhum dado encontrado na planilha</div>
                        </td>
                    </tr>
                `;
                return;
            }
            
            tbody.innerHTML = dados.map(registro => {
                const unidade = registro.UNIDADE || registro.NOME || 'N/A';
                const gerente = registro.GERENTE || 'N/A';
                const enfermeiro = registro.ENFERMEIRO || '0';
                const tecEnfermagem = registro['TEC. ENFERMAGEM'] || registro.TEC_ENFERMAGEM || '0';
                const medico = registro.MEDICO || '0';
                const telefone = registro.TELEFONE || registro.TEL || '';
                const endereco = registro.ENDERECO || registro.ENDERE√áO || '';
                const salaVacina = registro['SALA DE VACINA ATIVA'] || registro.SALA_VACINA || '';
                const email = registro.EMAIL || '';
                
                const temWhatsapp = telefone && telefone.replace(/\D/g, '').length >= 10;
                const temMaps = endereco && endereco.length > 5;
                const temTelefone = telefone && telefone.length > 5;
                const temEmail = email && email.includes('@');
                
                return `
                    <tr>
                        <td><strong>${escapeHTML(unidade)}</strong></td>
                        <td>${escapeHTML(gerente)}</td>
                        <td>${enfermeiro}</td>
                        <td>${tecEnfermagem}</td>
                        <td>${medico}</td>
                        <td>${formatarTelefone(telefone)}</td>
                        <td>${escapeHTML(endereco)}</td>
                        <td>
                            <span class="badge ${salaVacina.toUpperCase() === 'SIM' ? 'badge-success' : 'badge-danger'}">
                                ${salaVacina || 'N/A'}
                            </span>
                        </td>
                        <td>
                            <div class="contact-actions">
                                ${temWhatsapp ? `
                                    <a href="https://wa.me/55${telefone.replace(/\D/g, '')}" 
                                       target="_blank" 
                                       class="btn btn-whatsapp"
                                       title="WhatsApp">
                                        <i class="fab fa-whatsapp"></i>
                                    </a>
                                ` : ''}
                                
                                ${temMaps ? `
                                    <a href="https://maps.google.com/?q=${encodeURIComponent(endereco)}" 
                                       target="_blank" 
                                       class="btn btn-maps"
                                       title="Google Maps">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </a>
                                ` : ''}
                                
                                ${temTelefone ? `
                                    <a href="tel:${telefone}" 
                                       class="btn btn-call"
                                       title="Ligar">
                                        <i class="fas fa-phone"></i>
                                    </a>
                                ` : ''}
                                
                                ${temEmail ? `
                                    <a href="mailto:${email}" 
                                       class="btn btn-email"
                                       title="Email">
                                        <i class="fas fa-envelope"></i>
                                    </a>
                                ` : ''}
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
            
            document.getElementById('tabelaContainer').style.display = 'block';
        }
        
        function atualizarEstatisticas(dados) {
            const totalUnidades = dados.length;
            const unidadesComTelefone = dados.filter(d => d.TELEFONE || d.TEL).length;
            const totalContatos = dados.filter(d => d.TELEFONE || d.EMAIL).length;
            
            document.getElementById('totalUnidades').textContent = totalUnidades;
            document.getElementById('unidadesComTelefone').textContent = unidadesComTelefone;
            document.getElementById('totalContatos').textContent = totalContatos;
            document.getElementById('stats').style.display = 'grid';
        }
        
        function formatarTelefone(telefone) {
            if (!telefone) return 'N/A';
            const numeros = telefone.replace(/\D/g, '');
            if (numeros.length === 11) {
                return numeros.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
            } else if (numeros.length === 10) {
                return numeros.replace(/(\d{2})(\d{4})(\d{4})/, '($1) $2-$3');
            }
            return telefone;
        }
        
        function escapeHTML(texto) {
            if (!texto) return 'N/A';
            return texto.toString()
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#039;');
        }
        
        function mostrarLoading(mostrar) {
            document.getElementById('loading').style.display = mostrar ? 'block' : 'none';
            if (!mostrar) {
                document.getElementById('loading').innerHTML = `
                    <div>Clique em "Carregar Dados" para atualizar</div>
                `;
            }
        }
        
        function mostrarErro(mensagem) {
            document.getElementById('error').textContent = mensagem;
            document.getElementById('error').style.display = 'block';
        }
        
        function ordenarTabela(colIndex) {
            // Implementa√ß√£o simples de ordena√ß√£o
            const tbody = document.getElementById('tabelaBody');
            const linhas = Array.from(tbody.querySelectorAll('tr'));
            
            linhas.sort((a, b) => {
                const aVal = a.cells[colIndex].textContent;
                const bVal = b.cells[colIndex].textContent;
                return aVal.localeCompare(bVal, undefined, { numeric: true });
            });
            
            tbody.innerHTML = '';
            linhas.forEach(linha => tbody.appendChild(linha));
        }
        
        // Busca em tempo real
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const termo = e.target.value.toLowerCase();
            
            if (termo === '') {
                dadosFiltrados = [...dadosOriginais];
            } else {
                dadosFiltrados = dadosOriginais.filter(registro => 
                    Object.values(registro).some(valor => 
                        valor && valor.toString().toLowerCase().includes(termo)
                    )
                );
            }
            
            atualizarEstatisticas(dadosFiltrados);
            renderizarTabela(dadosFiltrados);
        });
        
        // Carregar dados automaticamente se a planilha for p√∫blica
        // window.addEventListener('load', carregarDados);
    </script>
</body>
