    <script>
        // CONFIGURA√á√ÉO - SUA PLANILHA DO GOOGLE SHEETS
        const PLANILHA_ID = '1QTPypA8lmlqeSveShPBI4HY9up6cOUcfulGDAyrP_BQ';
        const API_KEY = 'SUA_CHAVE_API_GOOGLE'; // Opcional para planilhas p√∫blicas
        
        async function carregarDados() {
            try {
                mostrarLoading(true);
                
                // URL da planilha p√∫blica (formato CSV)
                const url = `https://docs.google.com/spreadsheets/d/${PLANILHA_ID}/gviz/tq?tqx=out:csv`;
                
                const response = await fetch(url);
                const csvData = await response.text();
                
                const dados = parseCSV(csvData);
                renderizarTabela(dados);
                
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro ao carregar dados: ' + error.message);
            } finally {
                mostrarLoading(false);
            }
        }
        
        function parseCSV(csv) {
            const linhas = csv.split('\n');
            const cabecalhos = linhas[0].split(',').map(h => h.replace(/"/g, '').trim());
            
            const dados = [];
            for (let i = 1; i < linhas.length; i++) {
                if (!linhas[i].trim()) continue;
                
                const valores = linhas[i].split(',').map(v => v.replace(/"/g, '').trim());
                const linha = {};
                
                cabecalhos.forEach((cabecalho, index) => {
                    linha[cabecalho] = valores[index] || '';
                });
                
                dados.push(linha);
            }
            
            return dados;
        }
        
        function renderizarTabela(dados) {
            const tbody = document.getElementById('tabelaBody');
            
            if (dados.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center;">Nenhum dado encontrado</td></tr>';
                return;
            }
            
            tbody.innerHTML = dados.map(linha => {
                const telefone = linha.TELEFONE || linha.TEL || '';
                const endereco = linha.ENDERECO || linha.ENDERE√áO || '';
                
                return `
                    <tr>
                        <td><strong>${linha.UNIDADE || 'N/A'}</strong></td>
                        <td>${linha.GERENTE || 'N/A'}</td>
                        <td>${linha.ENFERMEIRO || '0'}</td>
                        <td>${formatarTelefone(telefone)}</td>
                        <td>${endereco}</td>
                        <td>
                            ${telefone ? `
                                <a href="https://wa.me/55${telefone.replace(/\D/g, '')}" target="_blank" class="btn btn-whatsapp">
                                    <i class="fab fa-whatsapp"></i> WhatsApp
                                </a>
                                <a href="tel:${telefone}" class="btn btn-call">
                                    <i class="fas fa-phone"></i> Ligar
                                </a>
                            ` : ''}
                            ${endereco ? `
                                <a href="https://maps.google.com/?q=${encodeURIComponent(endereco)}" target="_blank" class="btn btn-maps">
                                    <i class="fas fa-map-marker-alt"></i> Maps
                                </a>
                            ` : ''}
                        </td>
                    </tr>
                `;
            }).join('');
            
            document.getElementById('tabelaContainer').style.display = 'block';
        }
        
        function formatarTelefone(telefone) {
            if (!telefone) return 'N/A';
            const numeros = telefone.replace(/\D/g, '');
            if (numeros.length === 11) {
                return numeros.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
            }
            return telefone;
        }
        
        function mostrarLoading(mostrar) {
            document.getElementById('loading').style.display = mostrar ? 'block' : 'none';
        }
        
        // Busca em tempo real
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const termo = e.target.value.toLowerCase();
            const linhas = document.querySelectorAll('#tabelaBody tr');
            
            linhas.forEach(linha => {
                const texto = linha.textContent.toLowerCase();
                linha.style.display = texto.includes(termo) ? '' : 'none';
            });
        });
    </script>
